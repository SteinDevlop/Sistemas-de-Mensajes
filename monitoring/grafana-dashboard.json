{
  "dashboard": {
    "title": "Sistema de Mensajes",
    "description": "Monitoreo de mensajes publicados vs guardados",
    "tags": ["messaging", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total de Mensajes Publicados",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "datasource": "Prometheus",
        "targets": [
          {"expr": "messages_published_total", "refId": "A", "legendFormat": "Total Publicados"}
        ],
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "wideLayout": true
        }
      },
      {
        "id": 2,
        "title": "Total de Mensajes Guardados en BD",
        "type": "stat",
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "datasource": "Prometheus",
        "targets": [
          {"expr": "messages_processed_total", "refId": "A", "legendFormat": "Total Guardados"}
        ],
        "options": {
          "orientation": "auto",
          "textMode": "auto",
          "wideLayout": true
        }
      },
      {
        "id": 3,
        "title": "Mensajes Publicados vs Guardados (Total)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "messages_published_total",
            "refId": "A",
            "legendFormat": "Mensajes Publicados"
          },
          {
            "expr": "messages_processed_total",
            "refId": "B",
            "legendFormat": "Mensajes Guardados en BD"
          }
        ],
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        }
      },
      {
        "id": 4,
        "title": "Tasa de Mensajes (por minuto)",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(messages_published_total[1m])",
            "refId": "A",
            "legendFormat": "Publicados/min"
          },
          {
            "expr": "rate(messages_processed_total[1m])",
            "refId": "B",
            "legendFormat": "Guardados/min"
          }
        ],
        "options": {
          "legend": {
            "calcs": [],
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        }
      },
      {
        "id": 5,
        "title": "Proporci√≥n: Publicados vs Guardados",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 16},
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "messages_published_total",
            "refId": "A",
            "legendFormat": "Publicados"
          },
          {
            "expr": "messages_processed_total",
            "refId": "B",
            "legendFormat": "Guardados"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "showLegend": true
          },
          "pieType": "pie",
          "tooltip": {
            "mode": "single",
            "sort": "none"
          }
        }
      }
    ],
    "refresh": "5s",
    "schemaVersion": 37,
    "style": "dark",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {},
    "uid": "weather-messaging",
    "version": 1
  },
  "overwrite": true
}
